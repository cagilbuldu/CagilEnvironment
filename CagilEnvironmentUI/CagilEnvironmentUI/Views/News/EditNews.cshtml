@model EntityLayer.Concrete.News
@{
    ViewData["Title"] = "EditNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Haber Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.NewsID)
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control"  placeholder="Başlık giriniz" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="date" class="form-control" placeholder="Tarih giriniz" asp-for="Date">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea cols="30" rows="5" class="form-control"  placeholder="Açıklama giriniz" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

