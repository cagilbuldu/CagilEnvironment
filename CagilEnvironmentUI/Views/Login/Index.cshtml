@model CagilEnvironmentUI.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/web/css/StyleSheet.css">
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-4">
                <div class="login-container">
                    <h2>Admin Girişi</h2>
                    <form method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="userName" placeholder="Kullanıcı Adı"
                                   >
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" asp-for="password" placeholder="Şifre" >
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                    </form>
                </div>
            </div>
        </div>
        <br />
        <div style="text-align:center">
            <p>Admin Girişi için:</p>
            <p>Kullanıcı Adı:cagil1</p>
            <p>Şifre:123456Aa+</p>
        </div>
        
    </div>
</body>

</html>
