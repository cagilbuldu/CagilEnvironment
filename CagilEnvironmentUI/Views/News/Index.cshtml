@using EntityLayer.Concrete
@model List<News>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Aktif Et</th>
                            <th>Pasif Et</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NewsID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/News/DeleteNews/@item.NewsID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/News/EditNews/@item.NewsID" class="btn btn-outline-success">Güncelle</a></td>
                                <td><a href="/News/ChangeStatusToTrue/@item.NewsID" class="btn btn-outline-secondary">Aktif Et</a></td>
                                <td><a href="/News/ChangeStatusToFalse/@item.NewsID" class="btn btn-outline-warning">Pasif Et</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/News/AddNews/" class="btn btn-outline-info">Yeni Haber Girişi</a>
            </div>
        </div>
    </div>
</div>