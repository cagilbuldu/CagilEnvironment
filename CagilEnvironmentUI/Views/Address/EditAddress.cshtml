@model EntityLayer.Concrete.Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.AddressID)
                    <label>Açıklama 1</label>
                    <span asp-validation-for="Desc1" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Adres açıklama 1 yazınız" asp-for="Desc1">
                </div>
                <div class="form-group">
                    <label>Açıklama 2</label>
                    <span asp-validation-for="Desc2" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Adres açıklama 2 yazınız" asp-for="Desc2">
                </div>
                <div class="form-group">
                    <label>Açıklama 3</label>
                    <span asp-validation-for="Desc3" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Adres açıklama 3 yazınız"
                           asp-for="Desc3">
                </div>
                <div class="form-group">
                    <label>Açıklama 4</label>
                    <span asp-validation-for="Desc4" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Adres açıklama 4 yazınız" asp-for="Desc4">
                </div>
                <div class="form-group">
                    <label>Harita Konumu</label>
                    <span asp-validation-for="MapInfo" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Harita bilgisi" asp-for="MapInfo">
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

