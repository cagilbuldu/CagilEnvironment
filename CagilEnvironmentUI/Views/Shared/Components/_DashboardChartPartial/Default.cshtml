<div class="row">
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p style="text-align:center">Dünyada Sektörün Gelişme Hızı</p>
                <!DOCTYPE html>
                <html>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
                <body>
                    <canvas id="myChart" style="width:100%;max-width:700px"></canvas>

                    <script>
                        var xyValues = [
                            { x: 50, y: 7 },
                            { x: 60, y: 8 },
                            { x: 70, y: 8 },
                            { x: 80, y: 9 },
                            { x: 90, y: 9 },
                            { x: 100, y: 9 },
                            { x: 110, y: 10 },
                            { x: 120, y: 11 },
                            { x: 130, y: 14 },
                            { x: 140, y: 14 },
                            { x: 150, y: 15 }
                        ];

                        new Chart("myChart", {
                            type: "scatter",
                            data: {
                                datasets: [{
                                    pointRadius: 4,
                                    pointBackgroundColor: "rgb(0,0,255)",
                                    data: xyValues,
                                }]
                            },
                            options: {
                                legend: { display: false },
                                scales: {
                                    xAxes: [{ ticks: { min: 40, max: 160 } }],
                                    yAxes: [{ ticks: { min: 6, max: 16 } }],
                                }
                            }
                        });
                    </script>

                </body>
            </html>
            </div>
        </div>
    </div>
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
            <!DOCTYPE html>
            <html>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
            <body>

                <canvas id="myChart1" style="width:100%;max-width:600px;height:30px"></canvas>

                <script>
                    var xValues = ["2018", "2019", "2020", "2021", "2022"];
                    var yValues = [5063, 5995, 6667, 7816, 8479];
                    var barColors = ["red", "green", "blue", "orange", "brown"];

                    new Chart("myChart1", {
                        type: "bar",
                        data: {
                            labels: xValues,
                            datasets: [{
                                backgroundColor: barColors,
                                data: yValues
                            }]
                        },
                        options: {
                            legend: { display: false },
                            title: {
                                display: true,
                                text: "Türkiye Yıllara göre Güneş Enerjisi Kurulu Güç"
                            }
                        }
                    });
                </script>
            </body>
        </html>
            </div>
        </div>
