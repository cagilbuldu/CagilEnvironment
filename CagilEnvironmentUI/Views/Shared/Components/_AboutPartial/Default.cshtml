@using EntityLayer.Concrete
@model List<About>

<div class="about" id="about">
	<div class="container">
		<h3 class="tittle">Hakkımızda</h3>
		<p class="heading-btm-w3ls">Müşteri odaklı bir yaklaşımla hareket ediyor ve ihtiyaçlarınıza yönelik özelleştirilmiş çözümler sunuyoruz.</p>
		<div id="horizontalTab">
			<ul class="resp-tabs-list">
				<li>Tarihçemiz</li>
				<li>Biz Kimiz</li>
				<li>Müşterilerimiz</li>
			</ul>
			@foreach (var item in Model)
			{		
			<div class="resp-tabs-container">
				<div class="tab1">
					<p> @item.AboutHistory</p>
				</div>
				<div class="tab2">
						<p>@item.AboutUs</p>
				</div>
				<div class="tab3">
					<div class="clients">
						<ul>
								<li><img src="web/images/company1.jpg" alt="clients" class="img-responsive" /><span>AAAA Tic.San.Aş.</span></li>
								<li><img src="web/images/company2.jpg" alt="clients" class="img-responsive" /><span>BBBB Tic.San.Aş.</span></li>
								<li><img src="web/images/company4.jpg" alt="clients" class="img-responsive" /><span>CCCC Tic.San.Aş.</span></li>
						</ul>
					</div>
				</div>
			</div>
			}
		</div>
	</div>
</div>